@page "{videoId}"
@model TranscriptModel
@{
    ViewData["Title"] = Model.VideoTitle;
}

<article>
    @if (!string.IsNullOrWhiteSpace(Model.VideoTitle))
    {
        <h1>@Model.VideoTitle</h1>
    }

    @if (Model.Texts == null || Model.Texts.Count == 0)
    {
        <p>No captions found</p>
        <a asp-page="Index">Go back</a>
    }
    else
    {
        @foreach (var p in Model.Texts.ToSentences().ToParagraphs())
        {
            <p>@p</p>
        }
    }
</article>
